<resources>

    <!-- MAIN THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- ALTERNATIVE THEME -->
    <style name="AppTheme_2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor_2</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor_2</item>
        <item name="colorAccent">@color/secondaryDarkColor_2</item>
        <item name="android:textColor">@color/secondaryTextColor_2</item>
    </style>
    <!-- LOGIN ACTIVITY -->
    <style name="AppTheme.Login" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>

</resources>
